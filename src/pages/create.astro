---
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <main class="w-full h-screen pl-[200px] flex flex-col gap-4 justify-center items-center">
    <h1 class="text-2xl text-zinc-900">CREAR USUARIO</h1>
    <section class="grid grid-cols-2 grid-rows-3 gap-1">
      <div class="border-1 rounded-lg px-6 py-4 border-zinc-400 ">
        <form class="flex justify-between gap-4">
          <label>
            <span class="w-[55px] inline-block">Área:</span>
            <input type="text" name="area" placeholder="Escriba aquí" class="border-b-1 border-zinc-500 px-2 py-1 focus:outline-none placeholder:text-sm placeholder:text-zinc-400" />
          </label>
          <button type="submit" class="bg-sky-800 px-4 py-1 rounded-md text-white font-extralight text-sm">Crear</button>
        </form>
        <p class="text-[12px] text-red-800 mt-2">Debe crear el área</p>
      </div>
      <div class="border-1 rounded-lg px-6 py-4 border-zinc-400">
        <form class="flex justify-between gap-4">
          <label>
            <span class="w-[55px] inline-block">Rol:</span>
            <input type="text" name="name" placeholder="Escriba aquí" class="border-b-1 border-zinc-500 px-2 py-1 focus:outline-none placeholder:text-sm placeholder:text-zinc-400" />
          </label>
          <button type="submit" class="bg-sky-800 px-4 py-1 rounded-md text-white font-extralight text-sm">Crear</button>
        </form>
        <p class="text-[12px] text-red-800 mt-2">Debe crear el rol</p>
      </div>
      <div class="border-1 rounded-lg px-6 py-4 border-zinc-400">
        <form class="flex justify-between gap-4">
          <label>
            <span class="w-[55px] inline-block">Región:</span>
            <input type="text" name="name" placeholder="Escriba aquí" class="border-b-1 border-zinc-500 px-2 py-1 focus:outline-none placeholder:text-sm placeholder:text-zinc-400" />
          </label>
          <button type="submit" class="bg-sky-800 px-4 py-1 rounded-md text-white font-extralight text-sm">Crear</button>
        </form>
        <p class="text-[12px] text-red-800 mt-2">Debe crear la región</p>
      </div>
      <div class="border-1 rounded-lg px-6 py-4 border-zinc-400 row-span-3 col-start-2 row-start-1">
        <form class="flex flex-col justify-between gap-4">
          <label>
            <span class="w-[90px] inline-block">Nombre:</span>
            <input type="text" name="name" placeholder="Escriba aquí" class="border-b-1 border-zinc-500 px-2 py-1 focus:outline-none placeholder:text-sm placeholder:text-zinc-400" />
          </label>
          <label>
            <span class="w-[90px] inline-block">Nick:</span>
            <input type="text" name="nick" placeholder="Escriba aquí" class="border-b-1 border-zinc-500 px-2 py-1 focus:outline-none placeholder:text-sm placeholder:text-zinc-400" />
          </label>
          <label>
            <span class="w-[90px] inline-block">Contraseña:</span>
            <input type="password" name="password" placeholder="Escriba aquí" class="border-b-1 border-zinc-500 px-2 py-1 focus:outline-none placeholder:text-sm placeholder:text-zinc-400" />
          </label>
          <label>
            <span class="w-[90px] inline-block">Área:</span>
            <input type="text" name="area" placeholder="Escriba aquí" class="border-b-1 border-zinc-500 px-2 py-1 focus:outline-none placeholder:text-sm placeholder:text-zinc-400" />
          </label>
          <label>
            <span class="w-[90px] inline-block">Rol:</span>
            <input type="text" name="role" placeholder="Escriba aquí" class="border-b-1 border-zinc-500 px-2 py-1 focus:outline-none placeholder:text-sm placeholder:text-zinc-400" />
          </label>
          <label>
            <span class="w-[90px] inline-block">Región:</span>
            <input type="text" name="region" placeholder="Escriba aquí" class="border-b-1 border-zinc-500 px-2 py-1 focus:outline-none placeholder:text-sm placeholder:text-zinc-400" />
          </label>
          <button type="submit" class="bg-sky-800 px-4 py-1 rounded-md text-white font-extralight text-sm">Crear</button>
        </form>
      </div>
    </section>
  
  </main>
</Layout>